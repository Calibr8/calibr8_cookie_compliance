<section class="calibr8-cookie-compliance-status" style="display: none;">
    <div class="container">
        <div class="calibr8-cookie-compliance-status__text" data-agree="{{ agree_text }}"
             data-disagree="{{ disagree_text }}">
            {{ status_text }}
        </div>
        <div class="calibr8-cookie-compliance-status__button-wrapper">
            <div class="calibr8-cookie-compliance-status__toggle">
                <a id="calibr8-cookie-status-toggle" href="#" data-agree="{{ agree_link_text }}"
                   data-disagree="{{ disagree_link_text }}">
                </a>
            </div>
        </div>
    </div>
</section>