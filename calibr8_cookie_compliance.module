<?php

/**
 * @file
 * Calibr8 Cookie Compliance module.
 */

use Drupal\Core\Template\Attribute;
use Drupal\Core\StringTranslation\TranslatableMarkup;
use Drupal\Component\Utility\Xss;

/**
 * Implements hook_page_attachments().
 */
function calibr8_cookie_compliance_page_attachments(&$attachments) {
  // Get config.
  $config = \Drupal::config('calibr8_cookie_compliance.settings');

  $admin_context = \Drupal::service('router.admin_context');
  if ($admin_context->isAdminRoute() || empty($config) || !isset($config->get('notification_message')['value'])) {
    return;
  }

  // Create render array.
  $html_info = [
    '#theme' => 'calibr8_cookie_info',
    '#attributes' => new Attribute([
      'id' => 'calibr8-cookie-compliance',
      'class' => [],
    ]),
    '#notification_message' => [
      '#markup' => new TranslatableMarkup(Xss::filter($config->get('notification_message')['value'])),
    ],
    '#disagree_button_label' => [
      '#markup' => new TranslatableMarkup(Xss::filter($config->get('disagree_button_label'))),
    ],
    '#agree_button_label' => [
      '#markup' => new TranslatableMarkup(Xss::filter($config->get('agree_button_label'))),
    ]
  ];

  // Render markup.
  $markup = \Drupal::service('renderer')->renderRoot($html_info);

  $attachments['#attached']['library'][] = 'calibr8_cookie_compliance/calibr8_cookie_compliance';
  $attachments['#attached']['drupalSettings']['calibr8_cookie_compliance'] = [
    'markup' => $markup,
    'cookie_expiration' => Xss::filter($config->get('cookie_expiration')),
    'cookie_agree_value' => Xss::filter($config->get('cookie_agree_value')),
    'cookie_disagree_value' => Xss::filter($config->get('cookie_disagree_value')),
  ];
}


/**
 * Implements hook_theme().
 */
function calibr8_cookie_compliance_theme() {
  return [
    'calibr8_cookie_info' => [
      'variables' => [
        'attributes' => [],
        'notification_message' => [],
        'disagree_button_label' => [],
        'agree_button_label' => [],
      ],
      'template' => 'cookie_info',
    ],
    'calibr8_cookie_compliance_status' => [
      'template' => 'cookie_status',
      'variables' => [
        'status_text' => NULL,
        'agree_text' => NULL,
        'disagree_text' => NULL,
        'agree_link_text' => NULL,
        'disagree_link_text' => NULL,
      ],
    ],
    'calibr8_cookie_compliance_delete' => [
      'template' => 'cookie_delete',
      'variables' => [
        'delete_text' => NULL,
        'delete_button_text' => NULL,
        'delete_cookie_successful_text' => NULL,
      ],
    ],
  ];
}
